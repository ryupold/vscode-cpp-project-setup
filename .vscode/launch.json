{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "preLaunchTask": "build EXE",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false,
                "trace": false
            },
            "windows": {
                "program": "${workspaceRoot}/hello.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe"
            },
            "linux": {
                "program": "${workspaceRoot}/hello",
                "MIMode": "gdb"
            },
            "osx": {
                "program": "${workspaceRoot}/hello",
                "MIMode": "lldb"
            }
        }
    ]
}